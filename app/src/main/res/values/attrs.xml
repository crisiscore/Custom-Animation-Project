<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="LoadingButton">

        <attr name="loading_text" format="string" />
        <attr name="loading_text_color" format="color" />
        <attr name="loading_text_size" format="dimension" />
        <attr name="loading_text_style" format="enum">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bold_italic" value="3" />
        </attr>

        <attr name="loading_background_color" format="color" />
        <attr name="loading_background_drawable" format="reference" />

        <attr name="loading_circle_color" format="color"/>

        <attr name="loading_progress_color" format="color" />
        <attr name="loading_progress_drawable" format="reference" />

        <attr name="loading_progress_size" format="dimension" />
        <attr name="loading_progress_width" format="dimension" />

        <attr name="loading_progress_margin_left" format="dimension" />
        <attr name="loading_progress_margin_right" format="dimension" />
        <attr name="loading_progress_margin_top" format="dimension" />
        <attr name="loading_progress_margin_bottom" format="dimension" />

        <attr name="loading_progress_padding_left" format="dimension" />
        <attr name="loading_progress_padding_right" format="dimension" />
        <attr name="loading_progress_padding_top" format="dimension" />
        <attr name="loading_progress_padding_bottom" format="dimension" />

        <attr name="loading_progress_gravity" format="enum">
            <enum name="start" value="0" />
            <enum name="center" value="1" />
            <enum name="end" value="2" />
        </attr>

        <attr name="loading_progress_style" format="enum">
            <enum name="normal" value="0" />
            <enum name="small" value="1" />
            <enum name="large" value="2" />
        </attr>

        <attr name="loading_progress_orientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>

        <attr name="loading_progress_duration" format="integer" />

        <attr name="loading_progress_interpolator" format="reference" />
    </declare-styleable>
</resources>